<Project>

  <PropertyGroup>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netstandard2.0</TaskFolder>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net472</TaskFolder>
    <TaskAssembly>$(MSBuildThisFileDirectory)..\tasks\$(TaskFolder)\Agoda.Builds.Metrics.dll</TaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Agoda.Builds.Metrics.MeasureBuildTime" AssemblyFile="$(TaskAssembly)" />

  <Target Name="SaveTheTime" BeforeTargets="PreBuildEvent">
    <CreateProperty
      Value="$([System.DateTime]::Now.ToString(&quot;yyyy-MM-dd HH:mm:ss.ffffzzz&quot;))">
      <Output
      TaskParameter="Value"
      PropertyName="StartTime" />
    </CreateProperty>
  </Target>

  <Target Name="ExecuteMeasurement" BeforeTargets="PostBuildEvent">
    <Agoda.Builds.Metrics.MeasureBuildTime StartDateTime="$(StartTime)" EndDateTime="$([System.DateTime]::Now.ToString(&quot;yyyy-MM-dd HH:mm:ss.ffffzzz&quot;))">
      <Output PropertyName="BuildTime" TaskParameter="DebugOutput" /> 
    </Agoda.Builds.Metrics.MeasureBuildTime>
    <Message Text="The Build Time was $(BuildTime) ms" Importance="High" />
  </Target>
</Project>
