<Project>

  <PropertyGroup>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netstandard2.0</TaskFolder>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net472</TaskFolder>
    <TaskAssembly>$(MSBuildThisFileDirectory)..\tasks\$(TaskFolder)\Agoda.Builds.Metrics.dll</TaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Agoda.Builds.Metrics.MeasureBuildTime" AssemblyFile="$(TaskAssembly)" />

  <ItemGroup>
    <TempStorageFile Include="bin\$(ProjectName).dtlog" />
  </ItemGroup>

  <Target Name="WriteToFile" BeforeTargets="PreBuildEvent">
    <WriteLinesToFile File="@(TempStorageFile)" Lines="$([System.DateTime]::Now.ToString(&quot;yyyy-MM-dd HH:mm:ss.ffffzzz&quot;))" Overwrite="true" Encoding="Unicode" />
  </Target>

  <Target Name="ReadFromFile" BeforeTargets="ExecuteMeasurement">
    <ReadLinesFromFile File="@(TempStorageFile)">
      <Output TaskParameter="Lines" PropertyName="DateFromFile" />
    </ReadLinesFromFile>
  </Target>

  <Target Name="ExecuteMeasurement" BeforeTargets="PostBuildEvent">
    <Agoda.Builds.Metrics.MeasureBuildTime StartDateTime="$(DateFromFile)" EndDateTime="$([System.DateTime]::Now.ToString(&quot;yyyy-MM-dd HH:mm:ss.ffffzzz&quot;))">
      <Output PropertyName="BuildTime" TaskParameter="DebugOutput" /> 
    </Agoda.Builds.Metrics.MeasureBuildTime>
    <Message Text="The Build Time was $(BuildTime) ms" Importance="High" />
  </Target>

  <ItemGroup>
  </ItemGroup>
</Project>